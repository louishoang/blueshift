<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><a href="/">Blue Shift</a></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">

    <ul class="left">
      <li class="active">
      <% if !user_signed_in? %>
        <%= link_to "Sign up", new_user_registration_path %>
      <% elsif current_user && current_user.role == "member" %>
        <%= link_to "See all shows", shows_path %>
      <% elsif current_user.role == "admin" %>
        <%= link_to "See all shows", admin_shows_path %>
        <li class = "active"><%= link_to "See users", admin_users_path %></li>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path %>
      <% end %>
      </li>

     <% if !user_signed_in? %>
        <li class ="active"><a href="/users/sign_in">Sign In</a></li>
      <% end %>
      <li>
      <%= form_tag(shows_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Shows" %></li>
        <li><%= submit_tag "Search", :title => nil %></li>
      <% end %>
    </ul>

    <% if user_signed_in? %>
      <ul class="right">
        <li class="active">
          <%= link_to "Profile", edit_user_registration_path %>
        </li>
        <li class="active">
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
        </li>
      </ul>
    <% end %>
  </section>
</nav>
